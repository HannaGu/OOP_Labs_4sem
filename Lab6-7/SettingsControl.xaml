<UserControl x:Class="Lab6_7.SettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lab6_7"
             mc:Ignorable="d" 
             d:DesignHeight="800" Width="1000">
    <Grid Style="{DynamicResource GridPrincipalTheme}">
        <StackPanel Orientation="Horizontal">
            <Menu VerticalAlignment="Top" Background="{x:Null}" Foreground="White" >
                <MenuItem x:Name="menuTheme" Header="{DynamicResource m_Themes}" />
            </Menu>
            <Menu VerticalAlignment="Top" Background="{x:Null}" Foreground="White" >
                <MenuItem x:Name="menuLanguage" Header="{DynamicResource m_Languages}" />
            </Menu>
        </StackPanel>
    </Grid>
</UserControl>
